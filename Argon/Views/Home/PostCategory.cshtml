<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-gradient-primary text-white">
            <h3 class="mb-0">Kategori Ekle</h3>
        </div>
        <div class="card-body">
            <form id="categoryForm" method="post" action="" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="CategoryName" class="form-label">Kategori Adı</label>
                    <input type="text" class="form-control" id="CategoryName" name="CategoryName" required placeholder="Kategori adını girin">
                </div>

                <div class="mb-3">
                    <label for="CategoryCoverUrl" class="form-label">Kategori Kapak Görseli</label>
                    <input type="file" class="form-control" id="CategoryCoverUrl" name="CategoryCoverUrl">
                </div>

                <div class="mb-3">
                    <label for="CategoryLangId" class="form-label">Dil</label>
                    <select class="form-select" id="CategoryLangId" name="CategoryLangId">
                        <option value="">Dil Seçin</option>
                        <option value="1">AZ</option>
                        <option value="2">ENG</option>
                        <option value="3">RU</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">Ekle</button>
            </form>
        </div>
    </div>
</div>
<script>
           document.getElementById("categoryForm").addEventListener("submit", async (event) => {
        event.preventDefault();

        const formData = new FormData(event.target);

        try {
            const response = await fetch("https://localhost:44314/api/category", {
                method: "POST",
                body: formData,
            });

            if (response.ok) {
                const result = await response.json();
                alert("Başarılı: " + JSON.stringify(result));
            } else {
                const errorText = await response.text();
                alert("Hata: " + errorText);
            }
        } catch (error) {
            console.error("İstek başarısız oldu:", error);
            alert("Bağlantı hatası: " + error.message);
        }
    });



</script>